<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_shoucang"
        style="@style/ItemButtonStyle" android:text="收藏"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_efefef">
    </LinearLayout>
    <Button
        android:id="@+id/btn_copy"
        style="@style/ItemButtonStyle" android:text="复制"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_efefef">
    </LinearLayout>
    <Button
        android:id="@+id/btn_concern"
        style="@style/ItemButtonStyle" android:text="关注"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_efefef">
    </LinearLayout>
    <Button
    android:id="@+id/btn_cancel"
        android:layout_marginTop="20dp"
    style="@style/ItemButtonStyle" android:text="取消"/>
</LinearLayout>