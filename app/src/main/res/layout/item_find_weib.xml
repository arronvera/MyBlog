<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_view"
    style="@style/ItemHomeWeibLLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_item_concern"
                android:layout_width="50dp"
                android:text="@string/concern"
                android:textSize="10sp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/btn_send_shape_2"
                android:layout_alignParentRight="true"
                android:layout_height="25dp" />
            <code.vera.myblog.view.CircleImageView
                android:layout_width="40dp"
                android:id="@+id/crv_item_photo"
                android:layout_marginRight="10dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/crv_item_photo"
                tools:text="vera"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_name"
                android:layout_toRightOf="@+id/crv_item_photo"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_item_time"
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_time"
               />

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    tools:text="这个一个time"
                    android:layout_alignTop="@+id/iv_item_time"
                    android:layout_toEndOf="@+id/iv_item_time" />
                    <TextView
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_source"
                        tools:text="来自微博"
                        android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="这个一个text"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
        <include layout="@layout/layout_line"
            android:visibility="gone"
            android:id="@+id/line"/>
        <LinearLayout
            android:id="@+id/ll_item_author"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_author_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.jaeger.ninegridimageview.NineGridImageView
                android:id="@+id/original_nineGridImageView"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                app:imgGap="4dp"
                app:showStyle="fill"
                app:singleImgSize="120dp"/>
        </LinearLayout>
        <com.jaeger.ninegridimageview.NineGridImageView
            android:id="@+id/nineGridImageView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            app:imgGap="4dp"
            app:showStyle="fill"
            app:singleImgSize="120dp"/>
    <include layout="@layout/layout_bottom_atitu"/>
    </LinearLayout>
</LinearLayout>