<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="code.vera.myblog.presenter.activity.PostActivity">
    <!--标题栏-->
    <RelativeLayout
        style="@style/TopRelativeLayout"
        android:id="@+id/rl_top"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/colorWhite"
            android:text="取消"/>
        <TextView
            android:id="@+id/tv_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享圈子"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            />
        <!--<Button-->
        <!--android:id="@+id/btn_post"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:text="发送"-->
        <!--android:textSize="14sp"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:textColor="@color/color_bcbcbc"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="@drawable/btn_send_shape"-->
        <!--/>-->
    </RelativeLayout>

    <RelativeLayout
           android:layout_width="match_parent"
           android:layout_below="@+id/rl_top"
           android:id="@+id/rl_all_container"
           android:layout_height="match_parent">
           <LinearLayout
                android:layout_above="@+id/rl_bottom"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical"
               android:background="@color/colorWhite">
               <EditText
                   android:padding="5dp"
                   android:id="@+id/et_text"
                   android:hint="分享你圈子有趣的事情吧~"
                   android:gravity="top"
                   android:maxLength="140"
                   android:background="@color/colorWhite"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:minHeight="100dp"/>
               <!--原分享内容-->
                <LinearLayout
                    android:id="@+id/ll_Origina_Layout"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/color_ffffe0"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_original_photo"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_ori_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            tools:text="vera"/>
                        <TextView
                            android:id="@+id/tv_ori_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:textSize="14sp"
                            tools:text="内容..........."/>
                    </LinearLayout>
                </LinearLayout>
           </LinearLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_above="@+id/ll_line"
           android:padding="5dp"
           android:gravity="center_vertical">
           <!--查看位置-->
           <TextView
               android:id="@+id/tv_location"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="查看位置"
               android:ellipsize="end"
               android:maxEms="12"
               android:textColor="@color/text_hint"
               android:singleLine="true"/>
           <ImageView
               android:layout_centerVertical="true"
               android:layout_toRightOf="@+id/tv_location"
               android:visibility="invisible"
               android:id="@+id/iv_close_location"
               android:layout_width="15dp"
               android:layout_height="15dp"
               android:src="@mipmap/ic_close"/>
           <!--公开-->
           <TextView
               android:id="@+id/tv_public"
               android:textColor="@color/colorAccent"
               android:layout_centerVertical="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/text_public"
               android:layout_alignParentRight="true"/>
       </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll_line"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/hsv_photo"
            android:background="@color/colorAccent"
            android:layout_marginBottom="10dp">
        </LinearLayout>
        <HorizontalScrollView
            android:id="@+id/hsv_photo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/rl_bottom">
            <LinearLayout
                android:id="@+id/ll_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>
           <LinearLayout
               android:id="@+id/rl_bottom"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_alignParentBottom="true">
               <!--底部菜单-->
               <include layout="@layout/view_post_bottom" />
                <!--表情-->
               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:id="@+id/ll_container">
               </LinearLayout>
           </LinearLayout>

       </RelativeLayout>


</RelativeLayout>
