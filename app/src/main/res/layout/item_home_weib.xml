<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:anroid="http://schemas.android.com/apk/res-auto"
    style="@style/ItemHomeWeibLLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <code.vera.myblog.view.CircleImageView
                android:layout_width="40dp"
                android:id="@+id/crv_item_photo"
                android:layout_marginRight="10dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/crv_item_photo"
                tools:text="vera"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_name"
                android:layout_toRightOf="@+id/crv_item_photo"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_item_time"
                    android:layout_width="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_time"
               />

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    tools:text="这个一个time"
                    android:layout_alignTop="@+id/iv_item_time"
                    android:layout_toEndOf="@+id/iv_item_time" />

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="这个一个text"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:id="@+id/ll_item_author"
            android:visibility="gone"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:background="@color/color_efefef"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_author_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.jaeger.ninegridimageview.NineGridImageView
                android:id="@+id/original_nineGridImageView"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                app:imgGap="4dp"
                app:showStyle="fill"
                app:singleImgSize="120dp"/>
        </LinearLayout>
        <com.jaeger.ninegridimageview.NineGridImageView
            android:id="@+id/nineGridImageView"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            app:imgGap="4dp"
            app:showStyle="fill"
            app:singleImgSize="120dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_item_repost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
               <LinearLayout
                   style="@style/ItemHomeRepostLLayout">
                   <ImageView
                       android:layout_width="13dp"
                       android:layout_height="13dp"
                       android:src="@mipmap/ic_like"/>
                   <TextView
                       android:id="@+id/tv_item_repost"
                       android:text="转发"
                       android:layout_marginLeft="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_item_comment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout  style="@style/ItemHomeRepostLLayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_comment"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_item_comment"
                        android:text="评论"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_item_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout style="@style/ItemHomeRepostLLayout">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_like"/>
                    <TextView
                        android:id="@+id/tv_item_like"
                        android:text="喜欢"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>