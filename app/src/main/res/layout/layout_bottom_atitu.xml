<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_item_repost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                style="@style/ItemHomeRepostLLayout">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/ic_item_repost"/>
                <TextView
                    android:id="@+id/tv_item_repost"
                    android:text="转发"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_bcbcbc">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_item_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout  style="@style/ItemHomeRepostLLayout">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_comment"/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_item_comment"
                    android:text="评论"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_bcbcbc">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_item_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout style="@style/ItemHomeRepostLLayout">
                <ImageView
                    android:id="@+id/iv_like"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_like"/>
                <TextView
                    android:id="@+id/tv_item_like"
                    android:text="喜欢"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>