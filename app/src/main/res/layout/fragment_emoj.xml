<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v4.view.ViewPager
        android:id="@+id/face_viewPager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">
    </android.support.v4.view.ViewPager>

    <code.vera.myblog.view.widget.EmojiIndicatorView
        android:id="@+id/face_indicator"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal">
    </code.vera.myblog.view.widget.EmojiIndicatorView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="170dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/face_recent"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="最近"
            android:textColor="#9E9E9E"
            android:background="@drawable/selector_face_text"/>
        <TextView
            android:id="@+id/face_first_set"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="默认"
            android:textColor="#9E9E9E"
            android:background="@drawable/selector_face_text"/>
        <TextView
            android:id="@+id/face_anti"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="魔法"
            android:textColor="#9E9E9E"
            android:background="@drawable/selector_face_text"/>
        <TextView
            android:id="@+id/face_cartoon"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="动漫"
            android:textColor="#9E9E9E"
            android:background="@drawable/selector_face_text"/>
        <View
            android:id="@+id/fill_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_face_text"/>
    </LinearLayout>

</FrameLayout>